{
  "name": "meta1-vision-dex",
  "version": "0.6.24-p",
  "description": "Package for work with Meta1 DEX",
  "main": "index.js",
  "bin": {
    "meta1dex": "./cli.js"
  },
  "scripts": {
    "dev": "nodemon --exec 'npm' run build:babel --watch lib",
    "build": "npm run build:babel",
    "build:babel": "babel lib -d dist",
    "browserify": "browserify --full-paths index.js --standalone Meta1 -o browserify/meta1dex.js -d",
    "postbrowserify": "uglifyjs --compress --mangle --sequences --drop_console --output browserify/meta1dex.min.js -- browserify/meta1dex.js",
    "test": "mocha --timeout 10000"
  },
  "keywords": [
    "meta1"
  ],
  "author": "mindfulme",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "bignumber.js": "^7.2.1",
    "meta1-vision-js": "3.3.8-p",
    "meta1-vision-ws": "3.1.7-p",
    "lzma": "^2.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "browserify": "^16.2.2",
    "dotenv": "^6.0.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "uglify-js": "^3.4.9"
  }
}
